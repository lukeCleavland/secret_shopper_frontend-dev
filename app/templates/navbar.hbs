<header class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index' class="navbar-brand"}}Food Fight{{/link-to}}
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <p class="navbar-text navbar-right">
        {{#if auth.hasValidToken}}
          <a href="javascript:void(0);" class="navbar-link" {{action 'logout'}}>Sign out</a>
        {{else}}
          {{#link-to 'auth' class="navbar-link"}}Sign in{{/link-to}}
        {{/if}}
      </p>
      <ul class="nav navbar-nav">
        {{nav-bar-link name="analytics" path=application.currentPath}}
        {{nav-bar-link name="clientell" path=application.currentPath}}
      </ul>
    </div>
  </div>
</header>
